{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "useUnknownInCatchVariables": true,
        "types": [
            "node"
        ],
    },
    "include": [
        "./src/**/*.ts"
    ]
}